<%- include('../partials/header') %>

<div class="page-wrapper" style="padding-top: 70px;">
  <div class="container-fluid">

    <!-- Breadcrumb -->
    <div class="page-breadcrumb mb-4">
      <div class="row align-items-center">
        <div class="col-md-6">
          <h4 class="page-title">Users Details</h4>
        </div>
        <div class="col-md-6 text-end">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-end mb-0">
              <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">Users</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>

    <!-- Table Card -->
    <div class="row" style="padding-left:150px;">
      <div class="col-lg-10 mx-auto">
        <div class="card shadow-sm rounded">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Registered Users</h5>
          </div>
          <div class="card-body p-3">
            <div class="table-responsive">
              <table class="table table-striped table-bordered align-middle mb-0 text-center">
                <thead class="table-primary">
                  <tr>
                    <th>#</th>
                    <th class="text-start ps-3">Name</th>
                    <th class="text-start ps-3">Email</th>
                    <th>Verified</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (users.length > 0) { %>
                    <% users.forEach((user, index) => { %>
                      <tr>
                        <th scope="row"><%= index + 1 %></th>
                        <td class="text-start ps-3"><%= user.name %></td>
                        <td class="text-start ps-3"><%= user.email %></td>
                        <td><%= user.isVerified ? 'Yes' : 'No' %></td>
                        <td>
                          <a href="/pages/delete/<%= user._id %>" class="btn btn-danger btn-sm">
                            Delete
                          </a>
                        </td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="5">No users found</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('../partials/footer') %>
