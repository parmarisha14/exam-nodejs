<%- include('../partials/header') %>

<div class="page-wrapper" style="padding-top: 70px;">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-12">
        <div class="card shadow-sm rounded">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Edit Blog</h5>
          </div>
          <div class="card-body">
            <form method="POST" action="/blog/edit/<%= blog._id %>">
              <div class="mb-3">
                <label class="form-label">Title</label>
                <input type="text" name="title" class="form-control" value="<%= blog.title %>" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Content</label>
                <textarea name="content" class="form-control" rows="6" required><%= blog.content %></textarea>
              </div>
              <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg rounded-pill">Update Blog</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
